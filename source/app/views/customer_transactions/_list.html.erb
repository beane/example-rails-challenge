<h1><%= title %></h1>

<table id=<%= css_id %>>
  <thead>
    <tr>
      <th>Unique code</th>
      <th>Transaction time</th>
      <th>Amount</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% customer_transactions.each do |customer_transaction| %>
      <tr>
        <% customer = customer_transaction.customer %>
        <% code = customer_transaction.unique_code %>
        <td><a href=/customer_transactions/<%= code %>><%= code %></a></td>
        <td><%= customer_transaction.transaction_time %></td>
        <td><%= customer_transaction.amount %></td>
        <td><%= customer.display_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>


